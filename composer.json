{
    "name": "caremillc/caremi-mvc",
    "type": "project",
    "description": "The skeleton application for the Caremi framework.",
    "keywords": ["caremi", "framework"],
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "caremillc/framework-mvc": "dev-main",
        "vlucas/phpdotenv": "^5.6"
    },
    "repositories": {
        "caremillc/framework": {
            "type": "path",
            "url": "framework-mvc",
            "options": {
                "symlink": true
            }
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php caremi package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "@php caremi migrate --force"
        ],
        "post-update-cmd": [
            "@php caremi cache:clear"
        ]
    },
    "extra": {
        "caremi": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
